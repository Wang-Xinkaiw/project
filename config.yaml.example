# DeepSeek API配置
api:
  base_url: "https://api.deepseek.com"
  api_key: "your_deepseek_api_key_here"  # 请替换为您的DeepSeek API密钥
  model: "deepseek-chat"
  temperature: 0.0
  max_tokens: 8000
  timeout: 200

# 生成器配置
generator:
  max_strategies_per_generation: 5
  enable_code_validation: true
  enable_syntax_check: true
  retry_on_failure: true
  max_retries: 3
  temperature: 0.0
  max_tokens: 8000

# 评估器配置
evaluator:
  max_iterations: 800
  tolerance: 1e-4  # 放宽收敛条件，与112(1).py一致

# 算法配置
algorithms:
  admm:
    problem_module: "problems.admm_problems"
    default_beta: 0.5  # 与112(1).py一致，初始rho=0.1

# 测试问题配置
problems:
  admm:
    - "l1_regularization"
    - "elastic_net"
    - "l1_regression"
    - "elastic_net_regression"
    - "low_rank_matrix_completion"
    - "low_rank_representation"
    - "robust_multi_view_spectral_clustering"

# 终止条件
termination:
  max_iterations: 300
  patience: 300
  performance_target: 80

# 输出配置
output:
  results_dir: "results"
  logs_dir: "logs"
  strategies_dir: "strategies"
  feedback_dir: "feedback"

# 千问指导者配置
advisor:
  enabled: true  # 是否启用指导者
  api_key: "your_qwen_api_key_here"  # 请替换为您的阿里云DashScope API密钥
  model: "qwen3-235b-a22b"  # 千问模型名称
  temperature: 0.3  # 较低温度保证分析严谨性
  max_tokens: 4000
  timeout: 60
  save_reports: true  # 是否保存分析报告
  reports_dir: "advisor_reports"
  
  # 智能调用配置
  smart_call_enabled: true  # 是否启用智能调用模式
  no_improvement_threshold: 50  # 连续无改进的轮次阈值，超过该值时触发千问API调用
  min_performance_change: 0.01  # 判断为"有效改进"的最小性能变化比例（1%）
  call_history_enabled: true  # 是否保存调用历史记录
  call_history_file: "advisor_call_history.json"  # 调用历史记录文件路径
